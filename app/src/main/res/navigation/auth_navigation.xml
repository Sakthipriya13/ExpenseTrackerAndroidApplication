<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/auth_navigation"
    app:startDestination="@id/splashScreen">

    <fragment
        android:id="@+id/splashScreen"
        android:name="com.example.expensetrackerapplication.ui.auth.fragments.SplashScreen"
        android:label="SplashScreen">
        <action
            android:id="@+id/action_splash_to_login"
            app:destination="@id/loginScreen"/>
        <action
            android:id="@+id/action_splash_to_main"
            app:destination="@id/mainScreen"/>
    </fragment>

    <fragment
        android:id="@+id/loginScreen"
        android:label="LoginScreen"
        android:name="com.example.expensetrackerapplication.ui.auth.fragments.Login">
        <action
            android:id="@+id/action_login_to_main"
            app:destination="@id/mainScreen"/>
        <action
            android:id="@+id/action_login_to_signup"
            app:destination="@id/signUpScreen"/>
    </fragment>

    <fragment
        android:id="@+id/signUpScreen"
        android:name="com.example.expensetrackerapplication.ui.auth.fragments.SignUp"
        android:label="SignUpScreen">
        <action
            android:id="@+id/action_signup_to_login"
            app:destination="@id/loginScreen"/>
    </fragment>

    <activity
        android:id="@+id/mainScreen"
        android:label="MainScreen"
        android:name="com.example.expensetrackerapplication.ui.main.Main"/>
</navigation>