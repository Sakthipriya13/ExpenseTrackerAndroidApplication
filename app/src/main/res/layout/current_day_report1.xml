<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable name="currentDayReportViewModel"
            type="com.example.expensetrackerapplication.viewmodel.DayWiseReportViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.fragments.reports.DayWiseReport">


        <androidx.cardview.widget.CardView
            android:id="@+id/isExportLoading"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="30dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminate="true"
                android:layout_margin="20dp"
                android:indeterminateTint="?attr/colorPrimary"
                android:indeterminateTintMode="src_in"
                />
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/idHeaderContainer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintBottom_toTopOf="@id/idDateLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/idHeader"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="@string/day_wise_report"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/idCloseBtn"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/idCloseBtn"
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_weight="3"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:onClick="@{() -> currentDayReportViewModel.fnCloseDayWiseReport()}"
                    android:src="@drawable/cancel"
                    tools:layout_editor_absoluteY="2dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>



            <TextView
                android:id="@+id/idDateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="55dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/date"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/idFlow1"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/idLSelectDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.75"
                app:layout_constraintEnd_toStartOf="@+id/idCalendarButton"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idESelectDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:inputType="none"
                    android:maxLines="1"
                    android:text="@={currentDayReportViewModel._selectedDate}"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/idCalendarButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_calendar"
                app:layout_constraintStart_toEndOf="@+id/idLSelectDate"
                app:layout_constraintWidth_percent="0.13"/>

            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/idFlow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:flow_horizontalStyle="spread_inside"
                app:flow_horizontalGap="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idDateLabel"
                app:layout_constraintBottom_toTopOf="@+id/idExpenseLabel"
                app:constraint_referenced_ids="idLSelectDate,idCalendarButton"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/idExpenseLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/expense_summary"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/idLSummaryLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idLSelectDate" />

            <!--        <com.google.android.material.textfield.TextInputLayout-->
            <!--            android:id="@+id/idLNewExpense"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_marginStart="20dp"-->
            <!--            android:layout_marginEnd="20dp"-->
            <!--            app:layout_constraintEnd_toEndOf="parent"-->
            <!--            app:layout_constraintStart_toStartOf="parent"-->
            <!--            app:layout_constraintBottom_toTopOf="@id/idExportLayout"-->
            <!--            app:layout_constraintTop_toBottomOf="@+id/idExpenseLabel"-->
            <!--            >-->

            <!--            <com.google.android.material.textfield.TextInputEditText-->
            <!--                android:id="@+id/idENewExpense"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:drawableStart="@drawable/currency_rupee"-->
            <!--                android:drawablePadding="10dp"-->
            <!--                android:inputType="none"-->
            <!--                android:focusable="false"-->
            <!--                android:cursorVisible="false"-->
            <!--                android:maxLines="1"-->
            <!--                android:textSize="15sp"-->
            <!--                android:text="@={CurrentDayReportViewModel
._expenseSummary}"-->
            <!--                />-->

            <!--        </com.google.android.material.textfield.TextInputLayout>-->

            <LinearLayout
                android:id="@+id/idLSummaryLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/idExpenseLabel"
                app:layout_constraintBottom_toTopOf="@id/idLExpenseSummary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/idTotalExpenseLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="20sp"
                    android:text="TOTAL"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="?attr/colorPrimary"
                    />
                <TextView
                    android:id="@+id/idAddedExpenseLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="20sp"
                    android:text="ADDED"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="?attr/colorPrimary"
                    />
                <TextView
                    android:id="@+id/idDeletedExpenseLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="DELETED"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="?attr/colorPrimary"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/idLExpenseSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/idLSummaryLabel"
                app:layout_constraintBottom_toTopOf="@id/idExportLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/idLTotalExpense"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/idETotalExpense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="false"
                        android:drawableStart="@drawable/currency_rupee"
                        android:drawablePadding="1dp"
                        android:focusable="false"
                        android:gravity="center"
                        android:inputType="none"
                        android:maxLines="1"
                        android:text="@={currentDayReportViewModel._totalExpenseSummary}"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/idLAddedExpense"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/idEAddedExpense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/currency_rupee"
                        android:drawablePadding="1dp"
                        android:inputType="none"
                        android:focusable="false"
                        android:cursorVisible="false"
                        android:maxLines="1"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="@={currentDayReportViewModel._addedExpenseSummary}"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/idLDeletedExpense"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/idEDeletedExpense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/currency_rupee"
                        android:drawablePadding="1dp"
                        android:inputType="none"
                        android:focusable="false"
                        android:cursorVisible="false"
                        android:maxLines="1"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="@={currentDayReportViewModel._deletedExpenseSummary}"
                        />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/idExportLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/idLExpenseSummary"
                app:layout_constraintBottom_toTopOf="@id/idReportHorizontalScroll"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/idCancel"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="?attr/colorPrimary"
                    android:textColorLink="?attr/colorPrimary"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnExport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_background"
                    android:text="Export"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    app:icon="@drawable/ic_export"
                    app:iconGravity="start"
                    app:iconPadding="6dp"
                    app:iconTint="@color/white"
                    android:onClick="@{() -> currentDayReportViewModel.fnExportReport()}"/>

            </LinearLayout>

            <!-- Horizontal Scroll Container -->
            <HorizontalScrollView
                android:id="@+id/idReportHorizontalScroll"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:fillViewport="true"
                android:scrollbars="none"
                app:layout_constraintTop_toBottomOf="@id/idExportLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Vertical container for Header + RecyclerView -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Header Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:background="?attr/colorPrimary">

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:gravity="start|center"
                            android:textColor="?attr/textColorWhite"
                            android:textSize="20sp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="CATEGORY"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:gravity="start|center"
                            android:textColor="?attr/textColorWhite"
                            android:textSize="20sp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="EXPENSE"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:gravity="start|center"
                            android:textColor="?attr/textColorWhite"
                            android:textSize="20sp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="PAYMENT TYPE"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:gravity="start|center"
                            android:textColor="?attr/textColorWhite"
                            android:textSize="20sp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="NOTES"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="?attr/textColorWhite"
                            android:textSize="20sp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="STATUS"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="?attr/textColorWhite"
                            android:textSize="20sp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="DEL"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <!-- RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/idDayWiseReportView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:overScrollMode="never"/>
                </LinearLayout>

            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>