<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="dashBoard"
            type="com.example.expensetrackerapplication.viewmodel.DashBoardViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.fragments.Dashboard"
        >
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:padding="0dp"
            android:clipToPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/idBtnThisMonth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_percent="0.45"
                    android:text="@string/_this_month"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color_white"
                    android:gravity="center"
                    app:cornerRadius="20dp"
                    app:elevation="20dp"
                    android:padding="10dp"
                    android:onClick="@{() -> dashBoard.onCLickBtnThisMonth()}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:backgroundTint="?attr/colorPrimary"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/idBtnThisYear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_percent="0.45"
                    android:text="@string/_this_year"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:gravity="center"
                    app:cornerRadius="20dp"
                    app:elevation="20dp"
                    android:padding="10dp"
                    app:strokeColor="@color/color_grey"
                    app:strokeWidth="2dp"
                    android:onClick="@{() -> dashBoard.onClickBtnThisYear()}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/idBtnThisMonth"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:backgroundTint="@color/text_color_white"
                    />

                <androidx.constraintlayout.helper.widget.Flow
                    android:id="@+id/idBtnRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:flow_firstHorizontalStyle="spread"
                    app:flow_horizontalGap="5dp"
                    app:constraint_referenced_ids="idBtnThisMonth,idBtnThisYear"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/idLIncomeSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="20dp"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toBottomOf="@id/idBtnRow"
                    app:layout_constraintStart_toStartOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"
                        android:background="?attr/colorPrimary">
                        <TextView
                            android:id="@+id/idIncomeLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintWidth_percent="0.50"
                            android:textStyle="bold"
                            android:text="@string/_income"
                            android:gravity="center"
                            android:textSize="25sp"
                            android:textColor="@color/text_color_white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />
                        <TextView
                            android:id="@+id/idIncome"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintWidth_percent="0.50"
                            android:textStyle="bold"
                            android:text="@{dashBoard._incomeAmt}"
                            android:textSize="25sp"
                            android:textColor="@color/text_color_white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/idIncomeLabel"
                            app:layout_constraintTop_toTopOf="parent"
                            />
                        <androidx.constraintlayout.helper.widget.Flow
                            android:id="@+id/idIncomeRow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:flow_horizontalStyle="spread_inside"
                            app:flow_horizontalGap="5dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:constraint_referenced_ids="idIncomeLabel,idIncome"/>
                        <TextView
                            android:id="@+id/idExpenseLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintWidth_percent="0.50"
                            android:textStyle="bold"
                            android:text="@string/_expense"
                            android:gravity="center"
                            android:textSize="25sp"
                            android:textColor="@color/text_color_white"
                            />
                        <TextView
                            android:id="@+id/idExpense"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintWidth_percent="0.50"
                            android:textStyle="bold"
                            android:text="@{dashBoard._expenseAmt}"
                            android:textSize="25sp"
                            android:textColor="@color/text_color_white"
                            />
                        <androidx.constraintlayout.helper.widget.Flow
                            android:id="@+id/idExpenseRow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:flow_horizontalStyle="spread_inside"
                            app:flow_horizontalGap="5dp"
                            android:layout_margin="20dp"
                            app:layout_constraintTop_toBottomOf="@id/idIncomeRow"
                            app:layout_constraintStart_toStartOf="parent"
                            app:constraint_referenced_ids="idExpenseLabel,idExpense"/>
                        <TextView
                            android:id="@+id/idBalanceLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintWidth_percent="0.50"
                            android:textStyle="bold"
                            android:text="@string/_balance"
                            android:gravity="center"
                            android:textSize="25sp"
                            android:textColor="@color/text_color_white"
                            />
                        <TextView
                            android:id="@+id/idBalance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintWidth_percent="0.50"
                            android:textStyle="bold"
                            android:text="@{dashBoard._balanceAmt}"
                            android:textSize="25sp"
                            android:textColor="@color/text_color_white"
                            />
                        <androidx.constraintlayout.helper.widget.Flow
                            android:id="@+id/idBalanceRow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:flow_horizontalStyle="spread_inside"
                            app:flow_horizontalGap="5dp"
                            android:layout_margin="20dp"
                            app:layout_constraintTop_toBottomOf="@id/idExpenseRow"
                            app:layout_constraintStart_toStartOf="parent"
                            app:constraint_referenced_ids="idBalanceLabel,idBalance"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <View
                    android:id="@+id/idSpace1"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    app:layout_constraintTop_toBottomOf="@id/idLIncomeSummary"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/idBarChartHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/payment_type_overview"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/idSpace1"
                    />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_margin="16dp"
                    app:chart_barsRadius="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/idBarChartHeading"
                    />

<!--                <com.db.williamchart.view.BarChartView-->
<!--                    android:id="@+id/idPaymentTypeChart"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="300dp"-->
<!--                    android:layout_margin="10dp"-->
<!--                    app:chart_axis="xy"-->
<!--                    app:chart_barsColor="?attr/colorPrimary"-->
<!--                    app:chart_barsRadius="10dp"-->
<!--                    app:chart_labelsColor="?attr/colorPrimary"-->
