                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/idLCat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:layout_constraintTop_toBottomOf="@id/idAddedCategoryList"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/idBtnLayout"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/idECat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_category"
                                android:drawablePadding="10dp"
                                android:hint="Enter Category"
                                android:inputType="text"
                                android:text="@={settingsViewModel._newCategory}"
                                android:nextFocusDown="@id/idBtnAdd"
                                android:maxLines="1" />
                            <requestFocus/>
                        </com.google.android.material.textfield.TextInputLayout>


                        <LinearLayout
                            android:id="@+id/idBtnLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="10dp"
                            app:layout_constraintTop_toBottomOf="@id/idLCat"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <TextView
                                android:id="@+id/idBtnClear"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="start"
                                android:layout_weight="1"
                                android:background="?attr/selectableItemBackground"
                                android:onClick="@{() -> settingsViewModel.fnClearNewCategory()}"
                                android:gravity="center"
                                android:text="@string/clear"
                                android:textColor="?attr/colorPrimary"
                                android:textColorLink="?attr/colorPrimary"
                                android:textSize="25sp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/idBtnAdd"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:onClick="@{() -> settingsViewModel.fnInsertCategories()}"
                                android:background="@drawable/btn_background"
                                android:text= "@string/add"
                                android:textColor="@color/text_color_white"
                                android:textSize="25sp" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/idLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="20dp"
                    android:background="?attr/textColorWhite"
                    app:layout_constraintTop_toBottomOf="@id/idCategoryManage"
                    app:layout_constraintStart_toStartOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp">
                        <TextView
                            android:id="@+id/idLanHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/select_language"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:textColor="?attr/colorPrimary"
                            android:gravity="center"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <RadioGroup
                            android:id="@+id/idLanGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/idLanHeader">
                            <RadioButton
                                android:id="@+id/idRbEnglish"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                app:drawableTint="?attr/colorPrimary"
                                android:drawablePadding="10dp"
                                android:drawableStart="@drawable/ic_eng_lan"
                                android:text="@string/english" />
                            <RadioButton
                                android:id="@+id/idRbTamil"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                app:drawableTint="?attr/colorPrimary"
                                android:drawableStart="@drawable/ic_tamil_lan"
                                android:drawablePadding="10dp"
                                android:text="@string/tamil" />
                        </RadioGroup>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/idTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="20dp"
                    android:background="?attr/textColorWhite"
                    app:layout_constraintTop_toBottomOf="@id/idLanguage"
                    app:layout_constraintStart_toStartOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">
                        <TextView
                            android:id="@+id/idThemeHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/theme"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:textColor="?attr/colorPrimary"
                            android:gravity="center"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/idBtnLightTheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/light_theme"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            app:cornerRadius="10dp"
                            app:icon="@drawable/ic_light_theme"
                            app:iconGravity="textStart"
                            app:iconSize="20sp"
                            android:layout_margin="5dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/idThemeHeader"
                            android:backgroundTint="?attr/Color_Gray"
                            />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/idBtnDarkTheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintWidth_percent="0.50"
                            android:text="@string/dark_theme"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            app:cornerRadius="10dp"
                            app:icon="@drawable/ic_dark_theme"
                            app:iconGravity="textStart"
                            app:iconSize="20sp"
                            android:layout_margin="5dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/idBtnLightTheme"
                            android:backgroundTint="?attr/Color_Gray"
                            />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/idBtnSysTheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintWidth_percent="0.50"
                            android:text="@string/system_theme"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            app:cornerRadius="10dp"
                            app:icon="@drawable/ic_system_theme"
                            app:iconGravity="textStart"
                            app:iconSize="20sp"
                            android:layout_margin="5dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/idBtnDarkTheme"
                            android:backgroundTint="?attr/Color_Gray"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/idThemeColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="20dp"
                    android:background="?attr/textColorWhite"
                    app:layout_constraintTop_toBottomOf="@id/idTheme"
                    app:layout_constraintStart_toStartOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">
                        <TextView
                            android:id="@+id/idThemeColorHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/theme_color"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:textColor="?attr/colorPrimary"
                            android:gravity="center"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/idColor1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorPrimary1"
                            app:shapeAppearanceOverlay="@style/FabCustomShape" />
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/idColor2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorPrimary2"
                            app:shapeAppearanceOverlay="@style/FabCustomShape" />
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/idColor3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorPrimary3"
                            app:shapeAppearanceOverlay="@style/FabCustomShape" />

                        <androidx.constraintlayout.helper.widget.Flow
                            android:id="@+id/idColorRow1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:flow_horizontalGap="5dp"
                            app:flow_horizontalStyle="spread"
                            app:layout_constraintTop_toBottomOf="@id/idThemeColorHeader"
                            app:layout_constraintStart_toStartOf="parent"
                            app:constraint_referenced_ids="idColor1,idColor2,idColor3"
                            />
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/idColor4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorPrimary4"
                            app:shapeAppearanceOverlay="@style/FabCustomShape" />
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/idColor5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorPrimary5"
                            app:shapeAppearanceOverlay="@style/FabCustomShape" />

                        <androidx.constraintlayout.helper.widget.Flow
                            android:id="@+id/idColorRow2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:flow_horizontalGap="5dp"
                            app:flow_horizontalStyle="spread"
                            app:layout_constraintTop_toBottomOf="@id/idColorRow1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:constraint_referenced_ids="idColor4,idColor5"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

