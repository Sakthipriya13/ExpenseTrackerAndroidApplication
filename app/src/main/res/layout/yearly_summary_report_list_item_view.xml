<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="expense"
            type="com.example.expensetrackerapplication.model.ExpenseDetailsPerMonth" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/idMonthText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:paddingStart="5dp"
                android:maxLines="2"
                android:paddingEnd="5dp"
                android:layout_weight="1"
                android:text="@{expense.expenseDate}"
                android:textColor="?attr/textColorBlack"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/idTransactionCountText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:paddingStart="5dp"
                android:maxLines="2"
                android:paddingEnd="5dp"
                android:layout_weight="1"
                android:text="@{String.valueOf(expense.transactionsCount)}"
                android:textColor="?attr/textColorBlack"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/idExpenseAmt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/currency_rupee"
                android:drawablePadding="5dp"
                android:text='@{String.format("%.2f",expense.expenseSummaryAmt)}'
                android:textColor="?attr/textColorBlack"
                android:textSize="20sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</layout>