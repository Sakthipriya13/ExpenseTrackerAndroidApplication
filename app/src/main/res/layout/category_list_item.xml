<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="category"
            type="com.example.expensetrackerapplication.model.CategoryModel" />
        <variable
            name="onClickRemove"
            type="com.example.expensetrackerapplication.ui_event.CategoryItemClickListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:id="@+id/idHeaderOfList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/idCategoryName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@{category.categoryName}"
                android:textStyle="bold"
                android:textColor="@color/text_color_black"
                android:textSize="20sp"
                android:gravity="start|center"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/idBtnRemove"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/delete"
                android:onClick="@{() -> onClickRemove.onRemoveClick(category)}"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/text_color_white"
                app:cornerRadius="10dp"
                android:backgroundTint="?attr/errorBackground"
                app:icon="@drawable/ic_delete"
                app:iconSize="20sp"
                app:iconTint="@color/text_color_white"
                app:iconGravity="textStart"
                android:gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>