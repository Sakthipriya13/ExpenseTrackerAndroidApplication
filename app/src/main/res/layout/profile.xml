        <com.google.android.material.button.MaterialButton
            android:id="@+id/idAddIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="@{() -> profile.onClickAddIncome()}"
            android:text="@string/add_income"
            android:textSize="25sp"
            android:textColor="@color/text_color_white"
            android:layout_margin="16dp"
            app:cornerRadius="10dp"
            app:icon="@drawable/ic_add_income"
            app:iconSize="25dp"
            app:iconGravity="textStart"
            app:iconPadding="5dp"
            app:iconTint="?attr/textColorWhite"
            app:layout_constraintTop_toBottomOf="@id/idFlow3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/idChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="@{() -> profile.onClickChangePassword()}"
            android:text="@string/change_password"
            android:textSize="25sp"
            android:textColor="@color/text_color_white"
            android:layout_margin="16dp"
            app:cornerRadius="10dp"
            app:icon="@drawable/lock"
            app:iconSize="25dp"
            app:iconGravity="textStart"
            app:iconPadding="5dp"
            app:iconTint="?attr/textColorWhite"
            app:layout_constraintTop_toBottomOf="@id/idAddIncome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/idDelAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
