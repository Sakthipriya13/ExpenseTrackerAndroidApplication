<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="forget"
            type="com.example.expensetrackerapplication.viewmodel.ForgetViewModel" />
    </data>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_prompt"
            android:elevation="10dp">

            <TextView
                android:id="@+id/idHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="@string/forget_password"
                android:textColor="?attr/colorPrimary"
                android:layout_margin="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/idLEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="?attr/colorPrimary"
                app:boxStrokeErrorColor="?attr/errorBackground"
                app:hintTextColor="?attr/colorPrimary"
                app:cursorColor="?attr/colorPrimary"
                app:startIconDrawable="@drawable/email"
                app:startIconTint="?attr/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/idHeader"
                android:layout_margin="20dp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idEEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:singleLine="true"
                    android:textSize="20sp"
                    android:text="@={forget._email}"
                    android:nextFocusDown="@id/idENewPassword"
                    android:paddingStart="50dp"/>
                <requestFocus/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/idLNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="?attr/colorPrimary"
                app:boxStrokeErrorColor="?attr/errorBackground"
                app:hintTextColor="?attr/colorPrimary"
                app:cursorColor="?attr/colorPrimary"
                app:startIconDrawable="@drawable/lock"
                app:startIconTint="?attr/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/idLEmail"
                android:layout_margin="20dp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idENewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/new_password"
                    android:singleLine="true"
                    android:textSize="20sp"
                    android:text="@={forget._newPassword}"
                    android:nextFocusDown="@id/idBtnReset"
                    android:paddingStart="50dp"/>

            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:id="@+id/idBtnLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/idLNewPassword">

                <TextView
                    android:id="@+id/idBtnCancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textColor="?attr/colorPrimary"
                    android:textColorLink="?attr/colorPrimary"
                    android:onClick="@{() -> forget.onClickCancel()}"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/idBtnReset"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:text="@string/reset"
                    android:onClick="@{() -> forget.onClickReset()}"
                    android:textColor="@android:color/white"
                    android:background="@drawable/btn_background"
                    app:backgroundTint="?attr/colorPrimary"
                    app:cornerRadius="20dp"/>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
<!--    </androidx.cardview.widget.CardView>-->
</layout>