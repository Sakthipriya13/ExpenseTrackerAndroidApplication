<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable name="currentDayReportViewModel"
            type="com.example.expensetrackerapplication.viewmodel.DayWiseReportViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.fragments.reports.DayWiseReport">

        <androidx.cardview.widget.CardView
            android:id="@+id/isExportLoading"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="30dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminate="true"
                android:layout_margin="20dp"
                android:indeterminateTint="?attr/colorPrimary"
                android:indeterminateTintMode="src_in"
                />
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/idHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/day_wise_report"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="?attr/textColorBlack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:id="@+id/idBackLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/idHeader"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/idCloseBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:onClick="@{() -> currentDayReportViewModel.fnCloseDayWiseReport()}"
                    android:src="@drawable/back"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="?attr/colorPrimary"
                    android:textColorLink="?attr/colorPrimary"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnExport"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_background"
                    android:text="@string/export_excel"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:icon="@drawable/ic_export"
                    app:iconGravity="start"
                    app:iconPadding="6dp"
                    app:iconTint="@color/white"
                    android:onClick="@{() -> currentDayReportViewModel.fnExportReport()}"/>
            </LinearLayout>


            <TextView
                android:id="@+id/idDateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="@string/date"
                android:textColor="?attr/textColorBlack"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/idBackLayout"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/idLSelectDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.75"
                app:layout_constraintEnd_toStartOf="@+id/idCalendarButton"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idESelectDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:inputType="none"
                    android:maxLines="1"
                    android:text="@={currentDayReportViewModel._selectedDateUi}"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/idCalendarButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_calendar"
                app:layout_constraintStart_toEndOf="@+id/idLSelectDate"
                app:layout_constraintWidth_percent="0.13"/>

            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/idFlow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flow_horizontalStyle="spread_inside"
                app:flow_horizontalGap="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idDateLabel"
                app:constraint_referenced_ids="idLSelectDate,idCalendarButton"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/idNoReportsText"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_margin="16dp"
                android:text="@string/no_transaction"
                android:gravity="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/idLSelectDate"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/idContentLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idLSelectDate">

                <TextView
                    android:id="@+id/idExpenseLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/expense_summary"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="?attr/textColorBlack"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/idExpenseSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="20dp"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toBottomOf="@id/idExpenseLabel"
                    app:layout_constraintStart_toStartOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"
                        android:background="?attr/colorPrimary">
                        <TextView
                            android:id="@+id/idTotalLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintWidth_percent="0.60"
                            android:textStyle="bold"
                            android:text="@string/total"
                            android:gravity="center"
                            android:textSize="22sp"
                            android:textColor="@color/text_color_white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />
                        <TextView
                            android:id="@+id/idTotalAmt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintWidth_percent="0.40"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:textColor="@color/text_color_white"
                            android:drawableStart="@drawable/currency_rupee"
                            android:drawablePadding="5dp"
                            android:text="@={currentDayReportViewModel._totalExpenseSummary}"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/idTotalLabel"
                            app:layout_constraintTop_toTopOf="parent"
                            />
                        <androidx.constraintlayout.helper.widget.Flow
                            android:id="@+id/idTotalRow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:flow_horizontalStyle="spread_inside"
                            app:flow_horizontalGap="5dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:constraint_referenced_ids="idTotalLabel,idTotalAmt"/>
                        <TextView
                            android:id="@+id/idAddedLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintWidth_percent="0.60"
                            android:textStyle="bold"
                            android:text="@string/added"
                            android:gravity="center"
                            android:textSize="22sp"
                            android:textColor="@color/text_color_white"
                            />
                        <TextView
                            android:id="@+id/idAddedAmt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintWidth_percent="0.40"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:drawableStart="@drawable/currency_rupee"
                            android:drawablePadding="5dp"
                            android:textColor="@color/text_color_white"
                            android:text="@={currentDayReportViewModel._addedExpenseSummary}"
                            />

                        <androidx.constraintlayout.helper.widget.Flow
                            android:id="@+id/idExpenseRow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            app:constraint_referenced_ids="idAddedLabel,idAddedAmt"
                            app:flow_horizontalGap="5dp"
                            app:flow_horizontalStyle="spread_inside"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/idTotalRow" />

                        <TextView
                            android:id="@+id/idDelLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintWidth_percent="0.60"
                            android:textStyle="bold"
                            android:text="@string/deleted"
                            android:gravity="center"
                            android:textSize="22sp"
                            android:textColor="@color/text_color_white"
                            />
                        <TextView
                            android:id="@+id/idDeletedAmt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintWidth_percent="0.40"
                            android:textStyle="bold"
                            android:text="@={currentDayReportViewModel._deletedExpenseSummary}"
                            android:textSize="25sp"
                            android:drawableStart="@drawable/currency_rupee"
                            android:drawablePadding="5dp"
                            android:textColor="@color/text_color_white"
                            />
                        <androidx.constraintlayout.helper.widget.Flow
                            android:id="@+id/idDeletedRow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:flow_horizontalStyle="spread_inside"
                            app:flow_horizontalGap="5dp"
                            android:layout_margin="20dp"
                            app:layout_constraintTop_toBottomOf="@id/idExpenseRow"
                            app:layout_constraintStart_toStartOf="parent"
                            app:constraint_referenced_ids="idDelLabel,idDeletedAmt"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- Horizontal Scroll Container -->
                <HorizontalScrollView
                    android:id="@+id/idReportHorizontalScroll"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:fillViewport="true"
                    android:layout_marginTop="5dp"
                    android:scrollbars="none"
                    app:layout_constraintTop_toBottomOf="@id/idExpenseSummary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <!-- Vertical container for Header + RecyclerView -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!-- Header Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:background="?attr/colorPrimary">

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:gravity="start|center"
                                android:textColor="?attr/textColorWhite"
                                android:textSize="20sp"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp"
                                android:text="@string/category"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:gravity="start|center"
                                android:textColor="?attr/textColorWhite"
                                android:textSize="20sp"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp"
                                android:text="@string/expense"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:gravity="start|center"
                                android:textColor="?attr/textColorWhite"
                                android:textSize="20sp"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp"
                                android:text="@string/payment_type"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:gravity="start|center"
                                android:textColor="?attr/textColorWhite"
                                android:textSize="20sp"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp"
                                android:text="@string/remarks"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textColor="?attr/textColorWhite"
                                android:textSize="20sp"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp"
                                android:text="@string/expense_status"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textColor="?attr/textColorWhite"
                                android:textSize="20sp"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp"
                                android:text="@string/del"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <!-- RecyclerView -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/idDayWiseReportView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:overScrollMode="never"/>
                    </LinearLayout>

                </HorizontalScrollView>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>