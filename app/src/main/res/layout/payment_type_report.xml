<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="paymentTypeReportViewModel"
            type="com.example.expensetrackerapplication.viewmodel.PaymentTypeReportViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.fragments.reports.PaymentTypeReport"
    >

        <androidx.cardview.widget.CardView
            android:id="@+id/isExportLoading"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="30dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminate="true"
                android:layout_margin="20dp"
                android:indeterminateTint="?attr/colorPrimary"
                android:indeterminateTintMode="src_in"
                />
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/idHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/payment_type_report"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="?attr/textColorBlack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:id="@+id/idBackLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/idHeader"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/idCloseBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="@{() -> paymentTypeReportViewModel.fnCloseReport()}"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/back"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="?attr/colorPrimary"
                    android:textColorLink="?attr/colorPrimary"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnExport"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_background"
                    android:text="@string/export_excel"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:icon="@drawable/ic_export"
                    app:iconGravity="start"
                    app:iconPadding="6dp"
                    android:onClick="@{()->paymentTypeReportViewModel.fnExportCategoryList()}"
                    app:iconTint="@color/white"/>
            </LinearLayout>

            <TextView
                android:id="@+id/idDateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="@string/date"
                android:textColor="?attr/textColorBlack"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/idBackLayout"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/idLSelectDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.75"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/idBtnCalendar"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idESelectDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:inputType="none"
                    android:maxLines="1"
                    android:text="@{paymentTypeReportViewModel._selectedDateUi}"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/idBtnCalendar"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_calendar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/idLSelectDate"
                app:layout_constraintWidth_percent="0.13"/>

            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/idFlow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flow_horizontalStyle="spread_inside"
                app:flow_horizontalGap="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idDateLabel"
                app:constraint_referenced_ids="idLSelectDate,idBtnCalendar"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/idNoReportsText"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_margin="16dp"
                android:text="No Transaction"
                android:gravity="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/idLSelectDate"/>


            <androidx.core.widget.NestedScrollView
                android:id="@+id/idScrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fillViewport="true"
                android:padding="0dp"
                android:clipToPadding="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/idLSelectDate">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/ididChartHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/payment_type_overview"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/idChart"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:layout_margin="16dp"
                        app:chart_barsRadius="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ididChartHeading"
                        />
                    <LinearLayout
                        android:id="@+id/idListHeaderLayout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="16dp"
                        android:orientation="horizontal"
                        android:background="?attr/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/idChart">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="?attr/textColorWhite"
                            android:textSize="20sp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:layout_weight="1"
                            android:text="@string/payment_type"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="?attr/textColorWhite"
                            android:textSize="20sp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:text="@string/expense"/>

                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/idCashLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/idListHeaderLayout">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:paddingStart="5dp"
                                android:maxLines="2"
                                android:paddingEnd="5dp"
                                android:layout_weight="1"
                                android:text="@string/cash"
                                android:textColor="?attr/textColorBlack"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="start|center"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp"
                                android:layout_weight="1"
                                android:drawableStart="@drawable/currency_rupee"
                                android:drawablePadding="5dp"
                                android:text='@{String.format("%.2f",paymentTypeReportViewModel._cashAmt)}'
                                android:textColor="?attr/textColorBlack"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/idUpiLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/idCashLayout">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:paddingStart="5dp"
                                android:maxLines="2"
                                android:paddingEnd="5dp"
                                android:layout_weight="1"
                                android:text="@string/upi"
                                android:textColor="?attr/textColorBlack"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="start|center"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp"
                                android:layout_weight="1"
                                android:drawableStart="@drawable/currency_rupee"
                                android:drawablePadding="5dp"
                                android:text='@{String.format("%.2f",paymentTypeReportViewModel._cardAmt)}'
                                android:textColor="?attr/textColorBlack"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/idCardLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/idUpiLayout">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:paddingStart="5dp"
                                android:maxLines="2"
                                android:paddingEnd="5dp"
                                android:layout_weight="1"
                                android:text="@string/card"
                                android:textColor="?attr/textColorBlack"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="start|center"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp"
                                android:layout_weight="1"
                                android:drawableStart="@drawable/currency_rupee"
                                android:drawablePadding="5dp"
                                android:text='@{String.format("%.2f",paymentTypeReportViewModel._upiAmt)}'
                                android:textColor="?attr/textColorBlack"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/idOthersLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/idCardLayout">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:paddingStart="5dp"
                                android:maxLines="2"
                                android:paddingEnd="5dp"
                                android:layout_weight="1"
                                android:text="@string/other"
                                android:textColor="?attr/textColorBlack"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="start|center"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp"
                                android:layout_weight="1"
                                android:drawableStart="@drawable/currency_rupee"
                                android:drawablePadding="5dp"
                                android:text='@{String.format("%.2f",paymentTypeReportViewModel._othersAmt)}'
                                android:textColor="?attr/textColorBlack"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <View
                        android:id="@+id/idSpace"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/idOthersLayout"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>