<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    
    <data>
        <variable
            name="dayWiseReportListItem"
            type="com.example.expensetrackerapplication.model.DayWiseReportModel" />
        <variable
            name="listener"
            type="com.example.expensetrackerapplication.listener.DayWiseReportClickListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idCategoryName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@={dayWiseReportListItem.catgeoryName}"
                android:textColor="?attr/textColorBlack"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/idExpenseAmt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@={dayWiseReportListItem.expenseAmt}"
                android:textColor="?attr/textColorBlack"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/idExpensePaymentType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@={dayWiseReportListItem.paymentType}"
                android:textColor="?attr/textColorBlack"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/idExpenseRemarks"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@={dayWiseReportListItem.expenseRemarks}"
                android:textColor="?attr/textColorBlack"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/idExpenseStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@={dayWiseReportListItem.isDelete}"
                android:textColor="?attr/textColorBlack"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/idDeleteExpense"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:src="@drawable/ic_delete"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>