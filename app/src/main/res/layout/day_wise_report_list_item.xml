<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/idCategory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="HouseRent"
            android:textColor="?attr/textColorBlack"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/idExpense"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="9999.999"
            android:textColor="?attr/textColorBlack"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/idPaymentType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="CASH"
            android:textColor="?attr/textColorBlack"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/idRemarks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="abcd"
            android:textColor="?attr/textColorBlack"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/idDeleteExpense"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_delete"
            />
    </LinearLayout>


</androidx.cardview.widget.CardView>